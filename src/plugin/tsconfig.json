{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "typeRoots": ["../../node_modules/@figma"],
    "paths": {
      "@common": ["../common/index"],
      "~/*": ["./*"],
    },
  },
  "references": [{ "path": "../common/tsconfig.json" }]
}
