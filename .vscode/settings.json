{
  "cSpell.words": [
    "cloudflare",
    "ecma",
    "figma",
    "gridle",
    "iframe",
    "outfile",
    "singlefile",
    "tailwindcss",
    "typecheck",
    "xmark"
  ],
  // See https://stackoverflow.com/questions/66614875/how-can-i-enable-tailwind-intellisense-outside-of-classname
  "tailwindCSS.experimental.classRegex": [
    ["Style \\=([^;]*);", "'([^']*)'"],
    ["Style \\=([^;]*);", "\"([^\"]*)\""],
    ["Style \\=([^;]*);", "\\`([^\\`]*)\\`"]
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.experimental.useFlatConfig": true
}
